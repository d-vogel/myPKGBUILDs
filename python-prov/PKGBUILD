# Maintainer: Dorian Vogel <dorianvogel at gmail dot com>

_pkgname='python-prov'
pkgname=$_pkgname-git
module='nipype'
pkgver=1.5.1
pkgrel=1
pkgdesc='A Python library for W3C Provenance Data Model (PROV)'
arch=('i686' 'x86_64')
url='http://prov.readthedocs.io/'
license=('MIT')
depends=()
makedepends=('git' 'python')
provides=("$_pkgname"{,-git})
conflicts=("$_pkgname"{,-git})
source=("$_pkgname::git://github.com/trungdong/prov.git")
sha256sums=("SKIP")

pkgver() {
  cd $_pkgname
  git describe --always | sed 's:^v::;s:-:.:g'
}


build() {
    cd ${srcdir}/$_pkgname
    python setup.py build
}

package() {
    cd ${srcdir}/$_pkgname
    python setup.py install --root=${pkgdir} --optimize=1 --skip-build
}
